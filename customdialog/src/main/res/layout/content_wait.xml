<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleContentHeader"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/custom_wait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_20">

        <ProgressBar
            style="@style/StyleIndeteminatePB"/>

        <TextView
            android:id="@+id/tvContentBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/content_body"
            android:textSize="@dimen/textsize_15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLowerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:id="@+id/tvContentDecline"
            style="@style/StyleDecline"
            android:textColor="@color/colorLightGrey"/>

        <TextView
            android:id="@+id/tvContentAccept"
            style="@style/StyleAccept"
            android:textColor="@color/colorBluishGreen"/>
    </LinearLayout>
</FrameLayout>
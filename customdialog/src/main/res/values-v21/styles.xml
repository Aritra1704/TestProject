<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Overlay" parent="AppTheme">
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="Addschedulebuttons">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleFAB">
        <item name="android:layout_width">@dimen/margin_40</item>
        <item name="android:layout_height">@dimen/margin_40</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:background">@color/colorOffWhite</item>
        <item name="android:elevation">@dimen/margin_10</item>
    </style>

    <style name="StyleIndeteminatePB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/CircularProgress</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="android:colorPrimary">@color/colorYellow</item>
    </style>
</resources>
